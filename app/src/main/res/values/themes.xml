<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OneTwoTrip" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="text_price">
        <item name="android:textStyle">bold</item>
        <item name="color">@color/white</item>
        <item name="android:textSize">@dimen/text_price</item>
    </style>

    <style name="text_city">
        <item name="android:textStyle">bold</item>
        <item name="color">@color/white</item>
        <item name="android:textSize">@dimen/text_city</item>
    </style>

    <style name="text_city_code">
        <item name="android:textStyle">bold</item>
        <item name="color">@color/white</item>
        <item name="android:textSize">@dimen/text_city_code</item>
    </style>

    <style name="airport_from">
        <item name="android:textStyle">bold</item>
        <item name="color">@color/white</item>
        <item name="android:textSize">@dimen/text_city_code</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue</item>
    </style>

</resources>